{
	"info": {
		"_postman_id": "clinica-veterinaria-email-tests",
		"name": "Clínica Veterinaria - Pruebas de Correos",
		"description": "Colección completa para probar el sistema de correos electrónicos de la Clínica Veterinaria",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "clinica-veterinaria"
	},
	"item": [
		{
			"name": "1. Autenticación",
			"item": [
				{
					"name": "Login - Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.token) {",
									"        pm.environment.set('auth_token', response.token);",
									"        pm.environment.set('user_id', response.user.id);",
									"        console.log('Token guardado:', response.token.substring(0, 20) + '...');",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@clinica.com\",\n    \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Inicia sesión como administrador para obtener el token JWT necesario para probar los correos."
					},
					"response": []
				},
				{
					"name": "Validar Token",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/validate",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"validate"
							]
						},
						"description": "Valida que el token JWT sea válido y esté activo."
					},
					"response": []
				}
			],
			"description": "Endpoints de autenticación necesarios para obtener el token JWT."
		},
