# =================================================================
# VARIABLES DE ENTORNO - BACKEND
# Clínica Veterinaria API
# =================================================================
# 
# INSTRUCCIONES:
# 1. Copia este archivo como .env en la raíz del backend
# 2. Completa los valores según tu entorno
# 3. NUNCA commitees el archivo .env real (está en .gitignore)
# =================================================================

# =================================================================
# SERVIDOR
# =================================================================
SERVER_PORT=8080

# =================================================================
# BASE DE DATOS POSTGRESQL
# =================================================================
DB_URL=jdbc:postgresql://localhost:5433/vetclinic
DB_USERNAME=postgres
DB_PASSWORD=root

# =================================================================
# JWT (JSON Web Tokens)
# =================================================================
# IMPORTANTE: En producción, usa un secreto de al menos 32 caracteres
# Generar secreto seguro: openssl rand -base64 32
JWT_SECRET=ChangeMeInProductionUseAtLeast32CharactersForSecurity
JWT_EXPIRATION=86400000

# =================================================================
# CORS (Cross-Origin Resource Sharing)
# =================================================================
# En desarrollo: *
# En producción: https://tu-dominio.com
CORS_ALLOWED_ORIGINS=*

# =================================================================
# SWAGGER/OPENAPI
# =================================================================
# En desarrollo: true
# En producción: false (por seguridad)
SWAGGER_ENABLED=true

# =================================================================
# LOGGING
# =================================================================
# Niveles: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG

# =================================================================
# PERFIL DE SPRING
# =================================================================
# Opciones: dev, prod, test
SPRING_PROFILES_ACTIVE=dev

